<%= paginator.render do -%>
  <ul class="pagination">
    <!-- Removing the first page link temporarily due to low item count: <%= first_page_tag unless current_page.first? %> -->
    <%= prev_page_tag unless current_page.first? %>
    <% each_page do |page| -%>
      <% if page.left_outer? || page.right_outer? || page.inside_window? -%>
        <%= page_tag page %>
      <% elsif !page.was_truncated? -%>
        <%= gap_tag %>
      <% end -%>
    <% end -%>
    <%= next_page_tag unless current_page.last? %>
    <!-- Removing the last page link temporarily due to low item count: <%= last_page_tag unless current_page.last? %> -->
  </ul>
<% end -%>